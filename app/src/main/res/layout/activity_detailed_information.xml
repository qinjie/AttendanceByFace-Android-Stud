<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.msahakyan.expandablenavigationdrawer.DetailedInformationActivity">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/titleLayout"
        android:layout_margin="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail"
            android:text="Detailed Information"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/background_dark"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:layout_above="@+id/layout_report"
        android:layout_below="@+id/titleLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject area"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class section"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lecturer"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:lines="2"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recorded at"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:textColor="@android:color/background_dark"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv1"
                android:text="Computer Graphics"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CGG201"
                android:id="@+id/tv2"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr.Zhang Qinjie"
                android:id="@+id/tv3"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv4"
                android:text="Room 202, 2nd Floor, Alpha Building"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:lines="2"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv5"
                android:text="05/23/2016 08:30 AM"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv6"
                android:text="NOT YET"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv7"
                android:text="--:--"
                android:textSize="14dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_margin="11dp"
                android:layout_weight="10"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_report"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|left">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:id="@+id/tv_beaconInRange"
            android:visibility="invisible"
            android:textSize="16dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Capture Image"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_captureImage"
            android:visibility="invisible" />

    </LinearLayout>


</RelativeLayout>
